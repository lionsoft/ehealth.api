{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "date": {
      "type": "string",
      "pattern": "^(\\d{4}(?!\\d{2}\\b))((-)((0[1-9]|1[0-2])(\\3([12]\\d|0[1-9]|3[01]))|(00[1-9]|0[1-9]\\d|[12]\\d{2}|3([0-5]\\d|6[1-6]))))$"
    },
    "name": {
      "type": "string",
      "pattern": "^(?!.*[ЫЪЭЁыъэё@%&$^#])[a-zA-ZА-ЯҐЇІЄа-яґїіє0-9№\\\"!\\^\\*)\\]\\[(._-].*$"
    },
    "uuid": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
    },
    "dosage_object": {
      "type": "object",
      "properties": {
        "numerator_unit": {
          "type": "string",
          "description": "Dictionary: MEDICATION_UNIT"
        },
        "numerator_value": {
          "type": "number"
        },
        "denumerator_unit": {
          "type": "string",
          "description": "Dictionary: MEDICATION_UNIT"
        },
        "denumerator_value": {
          "type": "number"
        }
      },
      "required": [
        "numerator_unit",
        "numerator_value",
        "denumerator_unit",
        "denumerator_value"
      ],
      "additionalProperties": false
    },
    "manufacturer_object": {
      "type": "object",
      "properties": {
        "country": {
          "type": "string",
          "description": "Dictionary: COUNTRY"
        },
        "name": {
          "$ref": "#/definitions/name",
          "description": "manufacturer name"
        }
      },
      "required": [
        "country",
        "name"
      ],
      "additionalProperties": false
    },
    "ingredient_object": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/uuid",
          "description": "Innm dosage or Medication Identifier"
        },
        "dosage": {
          "$ref": "#/definitions/dosage_object"
        },
        "is_primary": {
          "type": "boolean",
          "description": "Is a primary ingredient"
        }
      },
      "required": [
        "id",
        "is_primary",
        "dosage"
      ],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^(?!.*[ЫЪЭЁыъэё@%&$^#])[a-zA-ZА-ЯҐЇІЄа-яґїіє0-9№\\\"!\\^\\*)\\]\\[(._-].*$"
    },
    "form": {
      "type": "string",
      "description": "Dictionary: MEDICATION_FORM"
    },
    "ingredients": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ingredient_object",
        "description": "ingredient object"
      },
      "minItems": 1,
      "description": "ingredients array"
    },
    "manufacturer": {
      "$ref": "#/definitions/manufacturer_object",
      "description": "manufacturer object"
    },
    "container": {
      "$ref": "#/definitions/dosage_object"
    },
    "code_atc": {
      "type": "string",
      "pattern": "^[abcdghjlmnprsvABCDGHJLMNPRSV]{1}[0-9]{2}[a-zA-Z]{2}[0-9]{2}$"
    },
    "package_qty": {
      "type": "number",
      "minimum": 0,
      "exclusiveMinimum": true,
      "description": "Package quantity of medication"
    },
    "package_min_qty": {
      "type": "number",
      "minimum": 0,
      "exclusiveMinimum": true,
      "description": "Minimal package quantity of medication"
    },
    "certificate": {
      "type": "string",
      "description": "certificate identifier"
    },
    "certificate_expired_at": {
      "$ref": "#/definitions/date",
      "description": "certificate expire date"
    }
  },
  "required": [
    "name",
    "form",
    "ingredients",
    "manufacturer",
    "code_atc",
    "container",
    "package_qty",
    "package_min_qty",
    "certificate",
    "certificate_expired_at"
  ],
  "additionalProperties": false
}
